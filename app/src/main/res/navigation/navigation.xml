<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/FirstFragment">

    <fragment
        android:id="@+id/FirstFragment"
        android:name="com.example.test.FirstFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_first">

        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/SecondFragment" />
    </fragment>
    <fragment
        android:id="@+id/SecondFragment"
        android:name="com.example.test.SecondFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_second">

        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/FirstFragment" />
        <action
            android:id="@+id/action_SecondFragment_to_virtualMachineListFragment"
            app:destination="@id/virtualMachineListFragment" />
    </fragment>
    <fragment
        android:id="@+id/virtualMachineListFragment"
        android:name="com.example.test.VirtualMachineListFragment"
        android:label="VirtualMachineListFragment" >
        <action
            android:id="@+id/action_virtualMachineListFragment_to_virtualMachineDetailFragment"
            app:destination="@id/virtualMachineDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/virtualMachineDetailFragment"
        android:name="com.example.test.VirtualMachineDetailFragment"
        android:label="VirtualMachineDetailFragment" />
</navigation>
