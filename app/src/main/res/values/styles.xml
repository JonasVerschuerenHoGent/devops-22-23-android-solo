<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/nunito_sans_italic</item>
        <item name="fontFamily">@font/nunito_sans_italic</item>
        <item name="android:textColor">@color/colorSecondary</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    
    <!-- BUTTONS -->
    <style name="primaryButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/rounded_rectangle</item>
        <item name="android:focusable">true</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/buttons_textsize</item>
    </style>
    <style name="secondaryButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/rounded_rectangle_two</item>
        <item name="android:focusable">true</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:textSize">20sp</item>
    </style>
    

    <!-- TITLES -->
    <style name="TextAppearance.Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/colorTertiary</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="TextAppearance.Subtitle" parent="TextAppearance.Title">
        <item name="android:textSize">16sp</item>
    </style>
    

</resources>
